# Network Configuration
RPC_URL_POLYGON=https://polygon-rpc.com
RPC_URL_POLYGON_BACKUP=https://rpc-mainnet.matic.quiknode.pro
CHAIN_ID=137

# Wallet Configuration (NEVER commit real keys!)
PRIVATE_KEY_PLACEHOLDER=your_private_key_here
MNEMONIC_PLACEHOLDER=your_mnemonic_phrase_here
HOT_WALLET_ADDRESS=0x...

# RPC Provider Keys
INFURA_KEY=your_infura_key
ALCHEMY_KEY=your_alchemy_key
QUICKNODE_ENDPOINT=your_quicknode_endpoint

# Gas Configuration
GAS_PRICE_STRATEGY=aggressive # conservative | standard | aggressive
MAX_GAS_GWEI=500
GAS_MULTIPLIER=1.2
MAX_PRIORITY_FEE_GWEI=50
BASE_FEE_MULTIPLIER=2

# Execution Configuration
EXECUTOR_MODE=simulate # simulate | live
SLIPPAGE_BPS=50 # 0.5%
MIN_PROFIT_THRESHOLD_USD=5
MAX_TRADE_SIZE_USD=10000
TRADE_CAP_PER_TX=5000
MAX_POSITION_SIZE_USD=50000

# Flashloan Configuration
ENABLE_FLASHLOANS=true
FLASHLOAN_PROVIDER=aave # aave | balancer | dodo
MAX_FLASHLOAN_USD=100000
FLASHLOAN_FEE_BPS=9 # 0.09% for Aave

# DEX Configuration
ENABLED_DEXES=quickswap,sushiswap,uniswapv3,balancer
QUICKSWAP_ROUTER=0xa5E0829CaCEd8fFDD4De3c43696c57F7D7A678ff
SUSHISWAP_ROUTER=0x1b02dA8Cb0d097eB8D57A175b88c7D8b47997506
UNISWAPV3_ROUTER=0xE592427A0AEce92De3Edee1F18E0157C05861564

# Database Configuration
ACCOUNTING_DB_URL=postgresql://user:password@localhost:5432/arbitrage
REDIS_URL=redis://localhost:6379
DB_POOL_SIZE=20

# Monitoring & Alerts
SENTRY_DSN=https://your_sentry_dsn
PROMETHEUS_PORT=9090
HEALTH_CHECK_PORT=3000
LOG_LEVEL=info # debug | info | warn | error

# Slack Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_MIN_PROFIT_USD=100
ALERT_MAX_LOSS_USD=50

# Risk Management
DAILY_LOSS_LIMIT_USD=500
MAX_CONSECUTIVE_FAILURES=5
CIRCUIT_BREAKER_COOLDOWN_MS=60000
MAX_GAS_PER_BLOCK=30000000

# Performance
BLOCK_POLLING_INTERVAL_MS=100
PRICE_CACHE_TTL_MS=500
PATH_CACHE_TTL_MS=5000
MAX_CONCURRENT_SIMULATIONS=10
WORKER_POOL_SIZE=4

# Security
API_KEY_HEADER=X-API-KEY
API_KEY=your_secure_api_key_here
ENABLE_REPLAY_PROTECTION=true
NONCE_MANAGER_TYPE=redis # redis | memory | db

# Feature Flags
ENABLE_TRIANGULAR_ARB=true
ENABLE_CROSS_DEX_ARB=true
ENABLE_MEV_PROTECTION=true
ENABLE_SANDWICH_PROTECTION=true
